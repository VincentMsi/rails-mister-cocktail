  <div class="container">
    <div class="row" >
     <ul>
     <li> <h1> <% @cocktails.each do |cocktail| %> </h1> </li>
   </ul>
     <lo <div class="col-6" >
              <div class="card-trip">
                <img src= <%= image_path("#{cocktail.banner_url}") %> />
